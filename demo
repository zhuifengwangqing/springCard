    -webkit-box-shadow: 0 0 10vm 10vm #ef1639;
    -moz-box-shadow: 0 0 10vm 10vm #ef1639;
    -ms-box-shadow: 0 0 10vm 10vm #ef1639;
    -o-box-shadow: 0 0 10vm 10vm #ef1639;
    box-shadow: 0 0 10vm 10vm #ef1639;
